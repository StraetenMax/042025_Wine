 <mj-section>
    {% for beer in beers %}
        <mj-group width="50%">  
            <mj-column width="40%" vertical-align="middle">
                <mj-image padding="0" width="200px" src="{{ beer.image }}" />
            </mj-column>
            <mj-column width="60%" vertical-align="middle">
                <mj-text padding="0" padding-bottom="8px" align="left" mj-class="T24-700">{{ beer.name }}</mj-text>
                <mj-text padding="0" align="left" mj-class="T16-300">{{ beer.description }}</mj-text>
                <mj-text padding="0" padding-bottom="8px" align="left" mj-class="T16-300"> {{ "Agriculture biologique" if beer.organic else "Agriculture conventionnelle"}}</mj-text>
                <mj-text padding="0" padding-bottom="15px" align="left" mj-class="T14-700">Alc. {{ beer.alcohol_content }} - {{ beer.volume }}</mj-text>
                <mj-button padding ="0" border-radius="0px" width="100%" mj-class="T14-700 cWhite bgOrange" >J'en profite</mj-button>
            </mj-column>
        </mj-group>
    {% endfor %}
</mj-section>