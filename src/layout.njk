<mjml>
    <mj-head>
        <mj-title>vente de vins</mj-title>
        <mj-raw>
        </mj-raw>
        <mj-attributes>
            {# typographies Email #}
            <mj-class name="T24-700" font-family="Arial, Helvetica, sans-serif" font-size="20px" font-weight="700" line-height="28px"/>
            <mj-class name="T20-400" font-family="Arial, Helvetica, sans-serif" font-size="20px" font-weight="400" line-height="24px"/>
            <mj-class name="T16-700" font-family="Arial, Helvetica, sans-serif" font-size="16px" font-weight="700" line-height="20px"/>
            <mj-class name="T16-300" font-family="Arial, Helvetica, sans-serif" font-size="16px" font-weight="400" line-height="20px"/>
            <mj-class name="T14-700" font-family="Arial, Helvetica, sans-serif" font-size="14px" font-weight="700" line-height="20px"/>
            {# couleur Email #}
            <mj-class name="cOrange" color="#ff5a00"/>
            <mj-class name="bgOrange" background-color="#ff5a00"/>
            <mj-class name="cBlack" color="#140f09"/>
            <mj-class name="bgBlack" background-color="#140f09"/>
            <mj-class name="cWhite" color="#ffffff"/>
            <mj-class name="bgWhite" background-color="#ffffff"/>
        </mj-attributes>
    </mj-head>
    <mj-body background-color="#140f09">
        {# header #}
        <mj-section>
            <mj-column>
                <mj-image src="./images/0529651e-cc52-4fdd-b512-3eddace4000e.jpg">
            </mj-column>
        </mj-section>
        {# body_1 #}
        <mj-section padding="0">
            <mj-column>
                <mj-image padding="0" width="600px" src="./images/fa8f8d79-b185-486e-a8d8-4ebdb1fe0e9c.jpg">
            </mj-column> 
        </mj-section>
        <mj-section background-color="#ffffff">
            <mj-column>
                <mj-text align="center" mj-class="T20-400 cOrange">meilleure qualit√©</mj-text>
                <mj-text mj-class="T16-400 cBlack">Totam rem aperiam eaque ipsa quae ab illo inventore veritatis quasi architecto beatae vitae dicta sunt explicabo</mj-text>
            </mj-column>
            <mj-column>
                <mj-text align="center" mj-class="T20-400 cOrange">haute performance</mj-text>
                <mj-text mj-class="T16-400 cBlack">Totam rem aperiam eaque ipsa quae ab illo inventore veritatis quasi architecto beatae vitae dicta sunt explicabo</mj-text>
            </mj-column>
        </mj-section>
        {# Products #}
        <mj-wrapper padding="30px" background-color="#ffffff">
            <mj-section>
                <mj-column>
                    <mj-text align="center" mj-class="T24-700 cT">Les promotions de la semaine</mj-text>
                </mj-column>
            </mj-section> 
            <mj-section>
            {% for beer in beers %}
                <mj-group width="50%">  
                    <mj-column width="40%" vertical-align="middle">
                        <mj-image padding="0" width="200px" src="{{ beer.image }}" />
                    </mj-column>
                    <mj-column width="60%" vertical-align="middle">
                        <mj-text padding="0" padding-bottom="8px" align="left" mj-class="T24-700">{{ beer.name }}</mj-text>
                        <mj-text padding="0" align="left" mj-class="T16-300">{{ beer.description }}</mj-text>
                        <mj-text padding="0" padding-bottom="8px" align="left" mj-class="T16-300"> {{ "Agriculture biologique" if beer.organic else "Agriculture conventionnelle"}}</mj-text>
                        <mj-text padding="0" padding-bottom="15px" align="left" mj-class="T14-700">Alc. {{ beer.alcohol_content }} - {{ beer.volume }}</mj-text>
                        <mj-button padding ="0" border-radius="0px" width="100%" mj-class="T14-700 cWhite bgOrange" >J'en profite</mj-button>
                    </mj-column>
                </mj-group>
            {% endfor %}
            </mj-section>
        </mj-wrapper>
        {# Footer #}
    </mj-body>
</mjml>